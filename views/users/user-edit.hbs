<div class="container mt-4 mb-5">

    <div class="row justify-content-center">

        <div class="col-10 col-md-8 col-lg-6">

            <h2>Edit</h2>
            <hr>

            <div class="d-flex justify-content-center avatar-edit">
                <img class="rounded-circle" src="{{user.avatar}}"
                    alt="{{user.firstName}} {{user.lastName}} profile photo">
            </div>

            <form action="/users/{{user._id}}/edit" enctype="multipart/form-data" method="POST">

                <div class="row mt-3">
                    <div class="col-lg-6">
                        <label for="firstName" class="form-label">First Name</label>
                        <input type="text" name="firstName" class="form-control" id="firstName"
                            value="{{user.firstName}}">
                    </div>

                    <div class="col-lg-6">
                        <label for="lastName" class="form-label">Last Name</label>
                        <input type="text" name="lastName" class="form-control" id="lastName" value="{{user.lastName}}">
                    </div>
                </div>

                <div class="mt-3">
                    <label for="avatar" class="form-label">Avatar</label>
                    <input type="file" class="form-control" id="avatar" name="avatar" value="{{user.avatar}}">
                </div>

                <div class="mt-3">
                    <label for="role" class="form-label">Role</label>
                    <select class="form-select" id="role" name="role">
                        <option value="{{user.role}}">Seleccionar...</option>
                        <option value="USER">USER</option>
                        <option value="ADMIN">ADMIN</option>
                    </select>
                </div>

                {{!-- <div class="row mt-3">
                    <div class="col-6">
                        <label for="oldPwd" class="form-label">Old password</label>
                        <input type="password" class="form-control" id="oldPwd" name="oldPwd">
                    </div>

                    <div class="col-6">
                        <label for="newPwd" class="form-label">New password</label>
                        <input type="password" class="form-control" id="newPwd" name="newPwd">
                    </div>
                </div> --}}

                <input type="hidden" name="_id" value="{{user._id}}">

                <div class="row mt-4 d-flex justify-content-center">
                    <div class="col-lg-6 mb-2 mb-lg-0 d-grid">
                        <button type="submit" class="btn btn-outline-success btn-sm">Update</button>
                    </div>

                    <div class="col-lg-6 mt-2 mt-lg-0 d-grid">
                        <a href="/users/my-profile" class="btn btn-outline-secondary btn-sm">Back</a>
                    </div>

                </div>

                {{#if errorMessage}}
                <div id="errorMessage">
                    <p>{{errorMessage}}</p>
                </div>
                {{/if}}

            </form>
        </div>
    </div>

    <div class="container d-flex justify-content-center mt-4">
        <a href="/" class="btn btn-secondary btn-lg">Home</a>
    </div>

</div>