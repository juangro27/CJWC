<div class="container mt-4 mb-5">

    <div class="row justify-content-center">

        <div class="col-12 col-xl-4 avatar">

            <img src="{{avatar}}" class="rounded-circle" alt="avatar {{firstName}} {{lastName}}">

        </div>

        <div class="col-12 col-xl-8 px-5">

            <h1 class="fw-bold">{{firstName}}'s profile</h1>
            <br>

            <h4 class="mt-3">{{firstName}} {{lastName}}</h4>
            <h4 class="mt-3">{{email}}</h4>
            <h5 class="mt-4">Role: {{role}}</h5>

            <div class="row mt-4 d-flex justify-content-end">
                <div class="col-12 col-md-3 d-grid">
                    <a href="/users/{{id}}/edit" class="btn btn-outline-secondary btn-lg">Edit</a>
                </div>

                {{#if isAdmin}}
                <div class="col-12 col-md-3 d-grid">
                    <a href="/users/{{id}}/delete" class="btn btn-outline-danger btn-lg">Delete</a>
                </div>
                {{/if}}
            </div>
        </div>

        <div class="container d-flex justify-content-center mt-4">
            <a href="/" class="btn btn-secondary btn-lg">Home</a>
        </div>

    </div>

</div>